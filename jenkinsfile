pipeline {
    agent any

    stages {
        stage('Clone') {
            steps {
                git 'https://github.com/rohan11131113/python-flask-web-app.git'
            }
        }
        stage('Build Docker Image') {
            steps {
                sh 'docker build -t flask-devops-app .'
            }
        }
        stage('Run Container') {
            steps {
                sh 'docker run -d -p 5000:5000 flask-devops-app'
            }
        }
    }
}
